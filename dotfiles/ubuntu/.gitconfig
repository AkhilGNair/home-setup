[user]
  email = yup.im.aki@gmail.com
  name = Akhil Nair

[push]
	default = simple

[core]
	editor = vim

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = auto

[gc]
  auto=1

[merge]
  summary=true

[alias]
  s = status
  b = branch -v
  d = diff
  c = checkout
  unstage = reset HEAD
  uncommit = reset --soft HEAD^
  lol = log --oneline --graph --decorate
  cm = checkout master
  pub = push -u origin HEAD
  can = commit --amend --no-edit
  pf = push --force

[pull]
  rebase = true
